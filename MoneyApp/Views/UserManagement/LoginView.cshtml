@{
    ViewBag.Title = "Money Manager";
}

<div class="loginBox">

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <br />
            <h4>
                Money App
            </h4>
            <h3>
                Sign In
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <form asp-action="UserAccountsPage">
                <br />
                <div>
                    <input class="input" type="text" name="username" placeholder="Username" />
                </div>
                <br />
                <div class=" pull-right">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 ">
            <a asp-action="RegisterUserPage">More Options</a>
        </div>
    </div>
    <br />

</div>