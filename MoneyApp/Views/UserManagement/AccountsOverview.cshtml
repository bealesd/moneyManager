@using MoneyApp.Dto
@model MoneyApp.Dto.UserDto

@{
    ViewBag.Title = "Accounts Overview";
    UserDto user = @Model;
}

<div class="loginBox">

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
            <h3 class="text-center">@Model.Username</h3>
            <br />
        </div>
    </div>

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 ">
            <table class="table table-hover table-borderless">
                <tbody>
                    @foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td>@account.AccountName</td>

                            @if (account.AccountBalance < 0)
                            {
                                <td class="tdRed">@Math.Abs(account.AccountBalance) dr</td>
                            }
                            @if (account.AccountBalance >= 0)
                            {
                                <td class="tdGreen">@Math.Abs(account.AccountBalance) cr</td>
                            }
                            <td class="col-xs-2">
                                <a asp-action="AccountPage" asp-route-accountGuid="@account.AccountGuid" asp-route-userDto="@Model.Username" class="glyphicon glyphicon-pencil"></a>
                            </td>
                            <td>
                                <a asp-action="DeleteMoneyAccountFromUser" asp-route-accountGuid="@account.AccountGuid" asp-route-username="@Model.Username" class="glyphicon glyphicon-remove"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
            <form asp-action="CreateMoneyAccountForUser" asp-route-username="@Model.Username">

                <br />
                <div class="col-xs-13">
                    <input class="input" type="text" placeholder=" account name" name="accountName" />
                </div>

                <br />
                <div class="pull-right">
                    <button class="btn btn-success">Create Account</button>
                </div>
            </form>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10" style="text-align: right">
            @*col-xs-offset-6 col-xs-4*@
            <form asp-action="DeleteUser" asp-route-username="@Model.Username">
                <a>Delete User Account</a>
            </form>
        </div>
    </div>
    <br />

</div>