@using Microsoft.AspNetCore.Identity
@using MoneyApp.Authentication
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var isLoggedIn = ViewBag.IsLoggedIn;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <title>
        @ViewBag.Title
    </title>
</head>

<body style="background-color: rgb(249, 249, 249)">

    <style>
        .input {
            border: 0;
            outline: 0;
            background: transparent;
            border-bottom: 1px solid lightgray;
            width: 100%;
        }

        .loginBox {
            background-color: white;
            border-radius: 10px;
            border-color: lightgray;
            border-style: solid;
            border-width: 1px;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: 15px;
            margin-left: 15px;
        }

        .insertMoneyItem {
            border-color: white;
            border-style: solid;
            border-width: 1px;
        }

        .table-borderless > tbody > tr > td,
        .table-borderless > tbody > tr > th,
        .table-borderless > tfoot > tr > td,
        .table-borderless > tfoot > tr > th,
        .table-borderless > thead > tr > td,
        .table-borderless > thead > tr > th {
            border: none;
        }

        .table tbody > tr.trGreen.trGreen > td {
            border-bottom: 1px solid lime;
        }

        .table tbody > tr.trRed.trRed > td {
            border-bottom: 1px solid red;
        }

        .table tbody > tr > td.tdRed.tdRed {
            border-bottom: 1px solid red;
        }

        .table tbody > tr > td.tdGreen.tdGreen {
            border-bottom: 1px solid lime;
        }

        .input[type="datetime-local"] {
            color: grey;
        }
        
    </style>

<br />
    


<div class="loginBox">
    <div class="navbar-header">
        @if (isLoggedIn == "true")
        {
            <a class="navbar-brand" asp-controller="UI" asp-action="LoadLoginView">Logout</a>
            <a class="navbar-brand" asp-controller="UI" asp-action="LoadOverview">Accounts</a>
        }
        @if (isLoggedIn == "false")
        {
            <a class="navbar-brand" asp-controller="UI" asp-action="LoadLoginView">Login</a>
            <a class="navbar-brand" asp-controller="UI" asp-action="LoadRegisterUserView">Register</a>
        }
    </div>

    @RenderBody()
</div>

    @*<div class="container">
            <div class="jumbotron">
                @RenderBody()
            </div>
        </div>*@

</body>

</html>